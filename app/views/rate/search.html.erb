<div class="container mt-4">
<%= form_with(class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :from, class: "col-2 col-form-label text-light text-right"%>
    <div class="col-4">
      <%= f.text_field :from, class: "form-control shadow rounded", placeholder: "yyyy/mm/dd"%>
    </div>
  </div>  
  <div class="form-group row">
    <%= f.label :to, class: "col-2 col-form-label text-light text-right"%>
    <div class="col-4">
      <%= f.text_field :to, class: "form-control shadow rounded", placeholder: "yyyy/mm/dd"%>
    </div>
  </div>  
  <div class="form-group row">
    <div class="col-2"></div>
    <div class="col-4">
      <%= f.submit class: "btn btn-outline-light btn-lg"%>
    </div>
  </div>
<% end %>
</div>